<div class="col-md-4 offset-md-4 text-center pt-5">
   <% if @error_message %>
    <div class="form-error">
     <%= @error_message %>
    </div>
   <% end %>
   <%= form_tag("/login") do %>
     <p>メールアドレス</p>
     <input name="email"value="<%= @email %>">
     <p>パスワード</p>
     <input type="password" name="password"value="<%= @password %>">
     <input type="submit" value="ログイン">
   <% end %>
</div>